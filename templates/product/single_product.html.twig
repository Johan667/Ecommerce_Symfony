 <div class="product-item text-center">
     <a href="{{ path('product', { 'slug': product.slug })}}"><img src="/uploads/{{ product.illustration }}"
             alt="{{ product.name }}" class="img-fluid"></a>
     <h5>{{ product.name }}</h5>
     {% if product.new %}
     <div class="text text-warning">Nouveau !</div>
     {% endif %}
     {% if product.bestseller %}
     <div class="text text-warning">Tendance !</div>
     {% endif %}
     <span class="product-subtitle">{{ product.subtitle }}</span>
     <span class="product-price">{{ (product.price / 100) | number_format(2, ',','.') }}â‚¬</span>
 </div>